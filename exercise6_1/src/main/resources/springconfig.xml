<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">
			
	<context:component-scan base-package="cs544.exercise6_1" /> 
	<context:annotation-config /> 
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>

	<bean id="customerService" class="cs544.exercise6_1.CustomerService">
		<property name="customerDAO" ref="customerDAO" />
		<property name="emailSender" ref="emailSender" />
	</bean>
	<bean id="customerDAO"  class="cs544.exercise6_1.CustomerDAO" />
	<bean id="emailSender"  class="cs544.exercise6_1.EmailSender" />
</beans>